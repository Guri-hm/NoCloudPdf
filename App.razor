<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <div
                class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-b from-gray-100 to-blue-50 p-8">
                <div class="text-center max-w-lg border border-gray-200 rounded-xl bg-white shadow-lg p-10">
                    <svg class="w-16 h-16 mx-auto mb-6 text-blue-400" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <circle cx="12" cy="12" r="10" stroke-width="2" fill="#e3eafc" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 10h.01M15 10h.01M8 16h8m-4-6v6" />
                    </svg>
                    <h1 class="text-5xl font-extrabold text-blue-700 mb-4">404</h1>
                    <h2 class="text-xl font-semibold text-gray-700 mb-2">ページが見つかりません</h2>
                    <p class="text-gray-600 mb-8 leading-relaxed">
                        お探しのページは存在しないか、移動した可能性があります。<br />
                        ホームまたは機能ページから再度アクセスしてください。
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a href="/NoCloudPdfApp/"
                            class="px-8 py-3 bg-blue-600 text-white font-bold rounded shadow hover:bg-blue-700 transition">
                            ホームに戻る
                        </a>
                        <a href="/merge"
                            class="px-8 py-3 bg-white text-blue-700 font-bold rounded border border-blue-300 hover:bg-blue-50 transition">
                            PDF結合ページへ
                        </a>
                    </div>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>
