private async Task ApplyHeaderFooter(HeaderFooterSetting setting)
{
    if (!setting.Stamps.Any())
    {
        _ = MessageService.ShowAsync("スタンプが設定されていません", MessageType.Warn);
        return;
    }

    try
    {
        var model = PdfDataService.GetModel();
        var pages = model.Pages;

        if (!pages.Any())
        {
            _ = MessageService.ShowAsync("処理対象のページがありません。", MessageType.Warn);
            return;
        }

        var startPage = Math.Max(1, setting.StartPage);
        var endPage = setting.EndPage == -1 ? pages.Count : Math.Min(pages.Count, setting.EndPage);
        var totalPagesInRange = endPage - startPage + 1;

        var processedCount = 0;

        for (int i = startPage - 1; i < endPage; i++)
        {
            var page = pages[i];
            processedCount++;

            await MessageService.ShowLoadingAsync($"スタンプ適用中... ({processedCount}/{totalPagesInRange})");

            if (string.IsNullOrEmpty(page.PageData) || page.HasError)
                continue;

            // 処理前のサイズを記録
            var beforeSize = page.PageData.Length;
            Console.WriteLine($"Page {i + 1} PageData length: {beforeSize}");

            // 範囲内のページインデックス（0始まり）
            var pageIndexInRange = i - (startPage - 1);
            
            var stampData = CreateStampsForCoordinateTransform(
                setting.Stamps, 
                page.RotateAngle,  // ページの回転角度を使用
                totalPagesInRange, 
                pageIndexInRange,
                startPage
            );

            var stampedPdfBytes = await JSRuntime.InvokeAsync<byte[]>(
                "addStampsToPdf", 
                page.PageData, 
                stampData
            );

            if (stampedPdfBytes != null && stampedPdfBytes.Length > 0)
            {
                page.PageData = Convert.ToBase64String(stampedPdfBytes);

                var afterSize = page.PageData.Length;
                Console.WriteLine($"Converted to Base64, length: {afterSize}");

                var newThumbnail = await JSRuntime.InvokeAsync<string>(
                    "generatePdfThumbnailFromPageData", 
                    page.PageData
                );
                
                if (!string.IsNullOrEmpty(newThumbnail))
                {
                    page.Thumbnail = newThumbnail;
                }
            }
        }

        _ = MessageService.ShowAsync($"スタンプを適用しました", MessageType.Success);
    }
    catch (Exception ex)
    {
        Console.WriteLine($"ヘッダー・フッター適用エラー: {ex.Message}");
        _ = MessageService.ShowAsync("ヘッダー・フッターの適用中にエラーが発生しました。", MessageType.Error);
    }
    finally
    {
        showHeaderFooterDialog = false;
        await MessageService.HideLoadingAsync();
    }
}

private List<object> CreateStampsForCoordinateTransform(
    List<StampPosition> originalStamps, 
    int rotateAngle, 
    int totalPagesInRange, 
    int pageIndexInRange,  // 範囲内の0始まりインデックス
    int serialStart)
{
    var stampData = new List<object>();

    foreach (var stamp in originalStamps)
    {
        var serialNumber = serialStart + pageIndexInRange;
        
        string serialStr;
        if (stamp.IsZeroPadded)
        {
            var maxSerialNumber = serialStart + (totalPagesInRange - 1);
            var digits = maxSerialNumber.ToString().Length;
            serialStr = serialNumber.ToString().PadLeft(digits, '0');
        }
        else
        {
            serialStr = serialNumber.ToString();
        }
        
        var displayText = stamp.IsSerial 
            ? (string.IsNullOrEmpty(stamp.Text) ? serialStr : $"{stamp.Text}{serialStr}")
            : stamp.Text;

        stampData.Add(new
        {
            text = displayText,
            isSerial = false,
            corner = stamp.Corner.ToString(),
            offsetX = stamp.OffsetX,
            offsetY = stamp.OffsetY,
            fontSize = stamp.FontSize,
            color = new { r = stamp.Color.R / 255.0, g = stamp.Color.G / 255.0, b = stamp.Color.B / 255.0 },
            rotateAngle = rotateAngle  // ページの回転角度を渡す
        });
    }

    return stampData;
}
