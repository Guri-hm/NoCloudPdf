                    <ActionButtonGroup T="string" Actions="resetActions" />

                    <div class="hidden md:block h-6 w-px bg-gray-300 mx-2" aria-hidden="true"></div>

                    <h1 class="hidden md:inline text-lg font-bold">編集</h1>
                    @* <button class="ml-2 px-3 py-1 bg-green-600 text-white rounded hover:bg-green-700"
                            @onclick="ForceReloadAllThumbnailsAsync">
                        <i class="fa-solid fa-image mr-1"></i>
