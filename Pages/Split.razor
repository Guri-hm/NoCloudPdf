                ShowMessage($"抽出対象に読み込み未完了またはエラーのページが {notReadyCount} ページあります。", MessageType.Warn);
                return;
            }

            resultPdfInfos.Clear();

            if (IsExtractSplit)
            {
                int pageIndex = 1;
                foreach (var page in selectedPages)
                {
                    var mergeData = new List<MergePageDto>
                    {
                        new MergePageDto
                        {
                            FileId = page.FileId,
