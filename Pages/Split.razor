<PageTitle>NoCloudPDF-分割</PageTitle>

@if (IsFilesLoaded && !CompletionState.ShowSplitOrExtractResult)
{
    <div id="drop-area" class="relative min-h-screen">
        <DropCover IsDragOver="isDragOver" Message="ここにファイルをドロップ" />
        <!-- 上部固定バー -->
