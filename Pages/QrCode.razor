@page "/qrcode"
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@using NoCloudPdf.Components
@using Microsoft.AspNetCore.Components

<PageTitle>NoCloudPDF - QRコード</PageTitle>

@if (showModeSelection)
{
    <div class="fixed inset-0 bg-black/40 backdrop-blur-sm flex items-center justify-center z-[250] p-4 animate-in fade-in duration-300" @onclick="GoBack">
        <div class="bg-white rounded-2xl shadow-2xl w-full max-w-3xl max-h-[90vh] overflow-hidden flex flex-col" @onclick:stopPropagation="true">
            <!-- ヘッダー -->
            <div class="bg-gradient-to-r from-purple-600 to-blue-600 text-white px-6 py-4">
                <h2 class="text-2xl font-bold">QRコード機能を選択</h2>
                <p class="text-sm opacity-90 mt-1">実行する機能を選択してください</p>
            </div>

            <!-- モード選択カード -->
            <div class="flex-1 overflow-y-auto p-8">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <!-- 画像から読み取り -->
                    <button @onclick="@(() => NavigateToMode("image"))"
                            class="bg-white border-2 border-gray-200 rounded-xl p-6 hover:border-blue-500 hover:shadow-lg transition-all duration-200 text-left group">
                        <div class="flex flex-col items-center text-center gap-3">
                            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center group-hover:bg-blue-200 transition-colors">
                                <ImageIcon Class="w-8 h-8 text-blue-600" />
                            </div>
                            <h3 class="text-lg font-bold text-gray-800">画像から読み取り</h3>
                            <p class="text-sm text-gray-600 leading-relaxed">
                                画像ファイルをアップロードしてQRコードを解析します
                            </p>
                        </div>
                    </button>

                    <!-- PDFから読み取り -->
                    <button @onclick="@(() => NavigateToMode("pdf"))"
                            class="bg-white border-2 border-gray-200 rounded-xl p-6 hover:border-green-500 hover:shadow-lg transition-all duration-200 text-left group">
                        <div class="flex flex-col items-center text-center gap-3">
                            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center group-hover:bg-green-200 transition-colors">
                                <FileIcon Class="w-8 h-8 text-green-600" />
                            </div>
                            <h3 class="text-lg font-bold text-gray-800">PDFから読み取り</h3>
                            <p class="text-sm text-gray-600 leading-relaxed">
                                PDF各ページからQRコードを検出して一覧表示します
                            </p>
                        </div>
                    </button>

                    <!-- カメラスキャン -->
                    <button @onclick="@(() => NavigateToMode("scanner"))"
                            class="bg-white border-2 border-gray-200 rounded-xl p-6 hover:border-purple-500 hover:shadow-lg transition-all duration-200 text-left group">
                        <div class="flex flex-col items-center text-center gap-3">
                            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center group-hover:bg-purple-200 transition-colors">
                                <CameraIcon Class="w-8 h-8 text-purple-600" />
                            </div>
                            <h3 class="text-lg font-bold text-gray-800">カメラスキャン</h3>
                            <p class="text-sm text-gray-600 leading-relaxed">
                                デバイスのカメラを使ってリアルタイムでスキャンします
                            </p>
                        </div>
                    </button>
                </div>

                <!-- 機能説明 -->
                <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-5">
                    <div class="flex items-start gap-3">
                        <InfoIcon Class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" />
                        <div class="text-sm text-gray-700">
                            <p class="font-semibold mb-3">各機能について</p>
                            <ul class="space-y-2">
                                <li class="flex items-start">
                                    <span class="text-blue-600 mr-2">•</span>
                                    <span><strong>画像から読み取り:</strong> JPEG、PNG などの画像ファイルに含まれるQRコードを解析します</span>
                                </li>
                                <li class="flex items-start">
                                    <span class="text-blue-600 mr-2">•</span>
                                    <span><strong>PDFから読み取り:</strong> PDF各ページを走査してQRコードを検出し、位置とともに表示します</span>
                                </li>
                                <li class="flex items-start">
                                    <span class="text-blue-600 mr-2">•</span>
                                    <span><strong>カメラスキャン:</strong> スマートフォンやPCのカメラを使って、リアルタイムでQRコードをスキャンします</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- フッター -->
            <div class="border-t border-gray-200 px-6 py-4 bg-gray-50">
                <button @onclick="GoBack"
                        class="w-full px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors">
                    キャンセル
                </button>
            </div>
        </div>
    </div>
}

@code {
    private bool showModeSelection = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // QRコードライブラリの事前ロード（バックグラウンド）
            try
            {
                await JSRuntime.InvokeVoidAsync("loadHtml5QrcodeLibrary");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"QR library preload failed: {ex.Message}");
            }
        }
    }

    private void NavigateToMode(string mode)
    {
        showModeSelection = false;
        
        switch (mode)
        {
            case "image":
                Navigation.NavigateTo("/qrcode/image");
                break;
            case "pdf":
                Navigation.NavigateTo("/qrcode/pdf");
                break;
            case "scanner":
                Navigation.NavigateTo("/qrcode/scanner");
                break;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }
}
