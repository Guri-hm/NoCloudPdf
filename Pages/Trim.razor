    private bool useRasterize = false;
    // トリミング矩形を各ページに適用して 1 PDF に結合する処理
    private async Task MergeTrimmedPagesAsync()
    {
        if (DisplayItems == null || DisplayItems.Count == 0)
            return;

        try
        {
            var displayList = DisplayItems.ToList();
            var pageCount = displayList.Count;

            var pageInfos = new List<(int Index, DisplayItem Item, PageItem Page, TrimRectInfo? Trim)>(pageCount);

            for (int i = 0; i < pageCount; i++)
            {
                var item = displayList[i];
                if (item.RawData is not PageItem page)
                {
                    _ = MessageService.ShowAsync($"ページ情報が見つかりません: {item.DisplayName}", MessageType.Error);
                    return;
                }

                pageInfos.Add((i, item, page, PdfDataService.GetTrimRect(i)));
            }

            var notReady = pageInfos.Count(p => string.IsNullOrEmpty(p.Page.PageData) || p.Page.HasError);
            if (notReady > 0)
            {
                _ = MessageService.ShowAsync($"PDFの読み込みが完了していないページが {notReady} ページあります。", MessageType.Warn);
                return;
            }
            
            await MessageService.ShowLoadingAsync("トリミング中...");
            await Task.Yield();

            var mergeData = new List<object>(pageCount);

            for (int idx = 0; idx < pageInfos.Count; idx++)
            {
                var info = pageInfos[idx];
                var page = info.Page;

                if (string.IsNullOrEmpty(page.PageData) || page.HasPageDataError)
                {
                    _ = MessageService.ShowAsync($"ページデータが不足しています: {info.Item.DisplayName}", MessageType.Error);
                    return;
                }

                string pageDataToUse = page.PageData;

                if (info.Trim != null)
                {
                    try
                    {
                        var cropFunction = useRasterize ? "cropPdfPageRasterized" : "cropPdfPageToTrimVector";

                        var rotate = page.RotateAngle % 360;
                        pageDataToUse = await JSRuntime.InvokeAsync<string>(
                            cropFunction,
                            page.PageData,
                            info.Trim.X,
                            info.Trim.Y,
                            info.Trim.Width,
                            info.Trim.Height,
                            rotate
                        );

                        if (string.IsNullOrEmpty(pageDataToUse))
                        {
                            _ = MessageService.ShowAsync($"ページのトリミングに失敗しました: {info.Item.DisplayName}", MessageType.Error);
                            return;
                        }

                        // トリミング後のサイズを確認
                        try
                        {
                            var croppedSize = await JSRuntime.InvokeAsync<Dictionary<string, double>>("getPdfPageOriginalSize", pageDataToUse);
                        }
                        catch { }
                    }
                    catch (Exception ex)
                    {
                        _ = MessageService.ShowAsync($"トリミング処理に失敗しました: {ex.Message}", MessageType.Error);
                        return;
                    }
                }

                mergeData.Add(new
                {
                    pageData = pageDataToUse,
                    rotateAngle = useRasterize ? 0 : (page.RotateAngle % 360)
                });
            }

            // 結合（JS）
            try
            {
                mergedPdfUrl = await JSRuntime.InvokeAsync<string>("mergePDFPages", mergeData);
                if (!string.IsNullOrEmpty(mergedPdfUrl))
                {
                    mergedFileName = $"trim_{DateTime.Now:yyyyMMddHHmm}.pdf";
                    mergedFileSize = await JSRuntime.InvokeAsync<string>("getPdfFileSize", mergedPdfUrl);
                    mergedPageCount = pageInfos.Count;
                    CompletionState.SetShowResult(true);
                }
                else
                {
                    _ = MessageService.ShowAsync("PDFの結合に失敗しました。", MessageType.Error);
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"MergeTrimmedPagesAsync error: {ex.Message}");
                _ = MessageService.ShowAsync("トリミング適用後の結合中にエラーが発生しました。", MessageType.Error);
            }
        }
        finally
        {
            await MessageService.HideLoadingAsync();
        }
    }

