    /// <summary>
    /// 並び方向に応じた視覚的な順序を計算（Nアップ用）
    /// </summary>
    private int GetVisualOrder(int index, int groupSize)
    {
        var (rows, cols) = LayoutNumber switch
        {
            2 => OutputOrientation == "landscape" ? (1, 2) : (2, 1),
            4 => (2, 2),
            8 => OutputOrientation == "landscape" ? (2, 4) : (4, 2),
            16 => (4, 4),
            _ => (2, 1)
        };
        
        int row = index / cols;
        int col = index % cols;
        
        return NUpDirection switch
        {
            // 左→右、上→下
            "forward" => index,
            
            // 右→左、下→上
            "reverse" => (rows - 1 - row) * cols + (cols - 1 - col),
            
            // 右→左、上→下
            "reverse-horizontal" => row * cols + (cols - 1 - col),
            
            // 上→下、左→右
            "forward-vertical" => col * rows + row,
            
            // 右の列から順に、各列は上→下
            "reverse-vertical" => (row * cols) + (cols - 1 - col),
            
            _ => index
        };
    }

