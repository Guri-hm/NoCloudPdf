{
  "type": "module",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.11",
    "terser": "^5.43.1",
    "vite": "^7.1.3"
  },
  "scripts": {
    "build:css": "postcss wwwroot/css/app.css -o wwwroot/css/site.css",
    "watch:css": "postcss wwwroot/css/app.css -o wwwroot/css/site.css --watch",
    "build:js": "vite build",
    "build": "npm run build:css && npm run build:js"
  }
}