@using NoCloudPdf.Models

<!-- 常に DOM に存在させ、JS 側で表示/非表示を制御 -->
<div id="message-bar-container" class="fixed top-20 right-4 z-50 max-w-md" style="min-width:180px; display:none;">
    <div class="w-full h-2 rounded-t-lg overflow-hidden bg-gray-300">
        <div id="message-bar-progress" class="h-full transition-all bg-gray-400"></div>
    </div>
    <div id="message-bar-box" class="px-4 py-2 rounded-b-lg shadow transition-all duration-300 bg-gray-100 text-gray-900 border border-gray-400">
        <div class="flex items-start gap-2">
            <div id="message-bar-text" class="flex-1"></div>
            <button id="message-bar-close" class="ml-2" style="color:inherit;">✕</button>
        </div>
    </div>
</div>

