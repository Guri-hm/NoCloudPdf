<div class="flex flex-col items-center gap-4 w-full">
    <div class="flex items-center gap-2 text-green-600 text-2xl font-bold">
        <CheckCircleIcon />
        <span>@(Title ?? "完了")</span>
    </div>
    @if (!string.IsNullOrEmpty(FileName))
    {
        <div class="text-gray-800 font-semibold truncate w-full text-center">@FileName</div>
    }
    @if (!string.IsNullOrEmpty(FileSize))
    {
        <div class="text-gray-600 text-sm">サイズ: @FileSize</div>
    }
    @if (PageCount > 0)
    {
        <div class="text-gray-600 text-sm">ページ数: @PageCount</div>
    }
    @ChildContent
</div>

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? FileName { get; set; }
    [Parameter] public string? FileSize { get; set; }
    [Parameter] public int PageCount { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
}