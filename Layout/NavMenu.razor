<div class="bg-gray-800 px-4 py-3 flex items-center justify-between">
    <a class="text-white" href="">
        <img src="img/ClientPdf.webp" alt="ClientPdfApp" class="w-8 h-8 object-contain" />
    </a>
    <button title="Navigation menu" class="text-white focus:outline-none md:hidden" @onclick="ToggleNavMenu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"
            stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 6h16M4 12h16M4 18h16" />
        </svg>
    </button>
</div>

<div class="transition-all duration-300 md:block @(collapseNavMenu ? "hidden" : "block") sidebar h-full">
    <nav class="flex flex-col items-center space-y-4 w-full mt-4">
        <NavLink class="flex flex-col items-center w-full py-2 text-white hover:bg-gray-700/70 rounded-lg transition"
            href="" Match="NavLinkMatch.All">
            <span class="fa fa-home text-2xl"></span>
            <span class="text-[10px] mt-1 opacity-80">Home</span>
        </NavLink>
        <NavLink class="flex flex-col items-center w-full py-2 text-white hover:bg-gray-700/70 rounded-lg transition"
            href="counter">
            <span class="fa fa-plus-square text-2xl"></span>
            <span class="text-[10px] mt-1 opacity-80">Counter</span>
        </NavLink>
        <NavLink class="flex flex-col items-center w-full py-2 text-white hover:bg-gray-700/70 rounded-lg transition"
            href="merge">
            <span class="fa fa-list-ul text-2xl"></span>
            <span class="text-[10px] mt-1 opacity-80">Merge</span>
        </NavLink>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}