<div class="bg-gray-800 px-4 py-3 flex items-center justify-between">
    <a class="text-white text-xl font-bold" href="">ClientPdfApp</a>
    <button title="Navigation menu" class="text-white focus:outline-none md:hidden" @onclick="ToggleNavMenu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"
            stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 6h16M4 12h16M4 18h16" />
        </svg>
    </button>
</div>

<div class="transition-all duration-300
            md:block
            @(collapseNavMenu ? "hidden" : "block")">
    <nav class="flex flex-col space-y-2 py-4">
        <NavLink class="px-6 py-2 text-white hover:bg-gray-700 rounded-lg transition font-medium flex items-center"
            href="" Match="NavLinkMatch.All">
            <span class="fa fa-home mr-2"></span> Home
        </NavLink>
        <NavLink class="px-6 py-2 text-white hover:bg-gray-700 rounded-lg transition font-medium flex items-center"
            href="counter">
            <span class="fa fa-plus-square mr-2"></span> Counter
        </NavLink>
        <NavLink class="px-6 py-2 text-white hover:bg-gray-700 rounded-lg transition font-medium flex items-center"
            href="merge">
            <span class="fa fa-list-ul mr-2"></span> Merge
        </NavLink>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}